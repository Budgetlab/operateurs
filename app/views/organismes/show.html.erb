<% content_for :title do %>Affichage de l'organisme <%= @organisme.nom %> | OPERA <% end %>
<main role="main">
  <div class="fr-container" >
    <nav role="navigation" class="fr-breadcrumb fr-my-3w" aria-label="vous êtes ici :">
      <button class="fr-breadcrumb__button" aria-expanded="false" aria-controls="breadcrumb-1">Voir le fil d’Ariane</button>
      <div class="fr-collapse" id="breadcrumb-1">
        <ol class="fr-breadcrumb__list">
          <li>
            <%= link_to root_path, class:"fr-breadcrumb__link" do %>Accueil<%end %>
          </li>
          <li>
            <%= link_to organismes_path, class:"fr-breadcrumb__link" do %>Liste des organismes<%end %>
          </li>
          <li>
            <a class="fr-breadcrumb__link" aria-current="page"><%= @organisme.nom %></a>
          </li>
        </ol>
      </div>
    </nav>
    <% if !@est_valide %><p class="fr-badge fr-badge--new fr-badge--no-icon">Brouillon</p><% end %>
    <h1 class="fr-mb-4w title-btn"><%= @organisme.nom %> <% if !@est_valide && @statut_user == '2B2O'%><%= link_to edit_organisme_path(@organisme.id), class: "fr-btn" do %>Reprendre le brouillon<%end %><%end %></h1>

    <%= render 'modifications/success'%>
    <% if @modifications_attente_organisme.length > 0  && @admin%>
      <div class="fr-grid-row fr-grid-row--gutters" id="modifications_attente">
        <div class="fr-col-12 fr-col-lg-12">
          <h2><span class="fr-icon-alarm-warning-fill fr-icon--lg fr-label--warning" aria-hidden="true"></span> Modifications en attente de validation [<%= @modifications_attente_organisme.length%>]</h2>
          <div class="fr-table fr-table--bordered fr-table--no-caption fr-table--blue-ecume fr-table--layout-fixed--lg">
            <table>
              <caption>Tableau des modifications </caption>
              <thead>
              <tr>
                <th scope="col">Date de saisie</th>
                <th scope="col">Champ</th>
                <th scope="col">Valeur</th>
                <th scope="col">Action</th>
              </tr>
              </thead>
              <tbody>
              <% @modifications_attente_organisme.each do |modification| %>
                <tr>
                  <td><%= format_date(modification.created_at) %></td>
                  <td><%= modification.nom %></td>
                  <td><%= render partial: 'modifications/table_nom', locals: {modification: modification}  %></td>
                  <td>
                    <% if @statut_user == "2B2O" %>
                    <ul class="fr-btns-group fr-btns-group--inline">
                      <li><%= link_to modification_path(modification, params: { modification: { statut: "validée" } }), data: { "turbo-method": :patch}, class:"fr-btn fr-my-0" do %>Valider<%end %></li>
                      <li><%= link_to open_modal_path(id: modification.id), class:"fr-btn fr-btn--secondary fr-my-0","data-fr-opened": false,"aria-controls":"modal-1",data: { "turbo_method": :post} do %>Refuser<%end %></li>
                    </ul>
                    <%else %>
                      <%= link_to modification_path(modification), data: { "turbo-method": :delete}, class: "fr-btn" do %>Annuler demande<%end %>
                    <%end %>
                  </td>

                </tr>
              <%end %>
              </tbody>
            </table>
            <dialog id="modal-1" class="fr-modal" aria-labelledby="modal-1-title">
              <div id="modal_refus">
                <%= render partial: 'modifications/motif_refus',locals: {modification: nil} %>
              </div>
            </dialog>
          </div>
        </div>
      </div>
    <%end %>

    <div class="fr-grid-row fr-grid-row--gutters">
      <div class="fr-col-12 fr-col-lg-4">
        <nav class="fr-sidemenu fr-sidemenu--sticky-full-height" aria-labelledby="fr-sidemenu-title">
          <div class="fr-sidemenu__inner">
            <button class="fr-sidemenu__btn" hidden aria-controls="fr-sidemenu-wrapper" aria-expanded="false">
              Dans cette rubrique
            </button>
            <div class="fr-collapse" id="fr-sidemenu-wrapper">
              <div class="fr-sidemenu__title" id="fr-sidemenu-title">Sections</div>
              <ul class="fr-sidemenu__list">

                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#fiche_identite" target="_self">Informations générales</a>
                </li>
                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#operateur" target="_self">Opérateur</a>
                </li>
                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#regime_budgetaire" target="_self">Régime budgétaire et comptable</a>
                </li>
                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#controle" target="_self">Contrôle</a>
                </li>
                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#tutelles" target="_self">Tutelles financière et technique</a>
                </li>
                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#gouvernance" target="_self">Gouvernance DB</a>
                </li>
                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#categories" target="_self">Catégories</a>
                </li>
                <li class="fr-sidemenu__item fr-sidemenu__item--active">
                  <a class="fr-sidemenu__link" href="#modifications" target="_self">Historique des modifications</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>

      </div>

      <div class="fr-col-12 fr-col-lg-8">
        <% if @est_valide %>
        <div class="fr-download">
          <p><%= link_to "/opera/organismes/#{@organisme.id}.xlsx", format: :xslx, class: "fr-download__link" do %>Télécharger la fiche d'identité de l'organisme<span class="fr-download__detail">Format .xlsx</span><%end %></p>
        </div>
        <% end %>
        <div id="fiche_identite" class="fr-mb-4w">
          <h2 class="title-btn">Informations générales <% if @est_valide && @admin %><%= link_to edit_organisme_path(@organisme, step: 1), class: "fr-btn fr-btn--secondary" do %>Modifier<%end %><%end %></h2>

          <div class="fr-card">
            <div class="fr-card__body">
            <div class="fr-card__content">
              <h3 class="fr-card__title">
                <%= @organisme.nom %><% if @organisme.acronyme && !@organisme.acronyme.blank? %> - <%= @organisme.acronyme %><%end %>
              </h3>
              <p class="fr-card__desc">Date de création : <b><%= format_boolean(format_date(@organisme.date_creation)) %></b></p>
              <p class="fr-card__desc">Siren : <b><%= format_boolean(@organisme.siren) %></b></p>
              <p class="fr-card__desc">Famille : <b><%= format_boolean(@organisme.famille) %></b></p>
              <p class="fr-card__desc">Nature juridique : <b><%= format_boolean(@organisme.nature) %></b></p>
              <% if @organisme.date_previsionnelle_dissolution %><p class="fr-card__desc">Date prévisionnelle de dissolution : <b><%= format_boolean(format_date(@organisme.date_previsionnelle_dissolution))%></b></p><%end %>
              <% if @organisme.etat == "Inactif" %>
                <p class="fr-card__desc">Date de dissolution : <b><%= format_boolean(format_date(@organisme.date_dissolution))%></b></p>
                <p class="fr-card__desc">Effet de dissolution : <b><%= format_boolean(@organisme.effet_dissolution) %></b></p>
                <% if @organisme.effet_dissolution == "Rattachement" || @organisme.effet_dissolution == "Création" %>
                  <p class="fr-card__desc">Organisme•s de rattachement : <b><% if @organisme.organisme_rattachements.length > 0 %><% @organisme.organisme_rattachements.each do |orga|%><%= link_to organisme_path(orga.organisme_destination) do%><%= orga.organisme_destination.nom %><%end %> - <%end %><%else %>Aucun parmi les organismes soumis au GBCP<%end %></b></p>
                <%end %>
              <%end %>

              <p class="fr-card__desc">Bureau DB de rattachement : <b><% if @organisme.bureau %><%= @organisme.bureau.nom %><%else %>Non renseigné<%end %></b></p>
              <p class="fr-card__desc">Textes institutifs : <b><%= auto_link(simple_format(format_boolean(@organisme.texte_institutif),{}, wrapper_tag: "span"), :html => { :target => '_blank' }) %></b></p>
              <% if @organisme_destinations && @organisme_destinations.count > 0 %>
                <p class="fr-card__desc">Organisme hérité de <% @organisme_destinations.each do |el| %><b><%= link_to organisme_path(el.organisme) do%><%= el.organisme.nom%><%end %></b> dissous le <%= format_boolean(format_date(el.organisme.date_dissolution))%> -<%end %></p>
              <% end %>
              <% if @organisme.commentaire && !@organisme.commentaire.blank?  %>
              <div class="fr-card__desc">
              <section class="fr-accordion">
                <h3 class="fr-accordion__title">
                  <button class="fr-accordion__btn" aria-expanded="false" aria-controls="accordion-106">Commentaires</button>
                </h3>
                <div class="fr-collapse" id="accordion-106">
                  <%= auto_link(simple_format(format_boolean(@organisme.commentaire),{}, wrapper_tag: "span"), :html => { :target => '_blank' })%>
                </div>
              </section>
              </div>
              <%end %>

                <div class="fr-card__start">
                  <ul class="fr-tags-group">
                    <li>
                      <% if @organisme.etat == "Inactif" %><p class="fr-badge"><%elsif @organisme.etat == "Actif" %><p class="fr-badge fr-badge--green-menthe"><%else %><p class="fr-badge fr-badge--warning fr-badge--no-icon"><%end %><%= @organisme.etat %></p>
                    </li>
                  </ul>
                </div>
            </div>
          </div>
          </div>
        </div>

        <div id="operateur" class="fr-mb-4w">
          <h2 class="title-btn">Opérateur <% if @est_valide && @statut_user == "2B2O" %>
              <% if @operateur.nil? %><%= link_to new_operateur_path(organisme_id: @organisme.id), class: "fr-btn fr-btn--secondary" do %>Modifier<%end %>
                <%else %><%= link_to edit_operateur_path(id: @operateur, organisme_id: @organisme.id), class: "fr-btn fr-btn--secondary" do %>Modifier<%end %>
              <%end %>
            <%end %></h2>

          <div class="fr-card">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h3 class="fr-card__title">
                  Opérateur année <%= Date.today.year %> : <% if @operateur %><%= format_boolean(@operateur.operateur_n) %><%else %>Non<%end %>
                </h3>
                <p class="fr-card__desc">Opérateur année <%= Date.today.year+1 %> : <b><% if @operateur %><%= format_boolean(@operateur.operateur_nf) %><%else %>Non<%end %></b></p>
                <p class="fr-card__desc">Opérateur année <%= Date.today.year-1 %> : <b><% if @operateur %><%= format_boolean(@operateur.operateur_n1) %><%else %>Non<%end %></b></p>
                <p class="fr-card__desc">Opérateur année <%= Date.today.year-2 %> : <b><% if @operateur %><%= format_boolean(@operateur.operateur_n2) %><%else %>Non<%end %></b></p>
                <% if @operateur %>
                  <p class="fr-card__desc">Appartenance catégorie d'opérateur : <b><%= format_boolean(@operateur.presence_categorie) %></b></p>
                  <% if @operateur.presence_categorie  %>
                    <p class="fr-card__desc">Catégorie d'opérateur : <b><%= format_boolean(@operateur.nom_categorie) %></b></p>
                  <%end %>
                  <p class="fr-card__desc">Mission programme chef de file : <b><% if @operateur.mission %><%= format_boolean(@operateur.mission.nom) %><%end %></b></p>
                  <p class="fr-card__desc">Programme chef de file : <b><% if @operateur.programme %><%= @operateur.programme.numero %> - <%= @operateur.programme.nom %><%end %></b></p>
                  <p class="fr-card__desc">Programmes annexes : <b><% if @operateur_programmes && !@operateur_programmes.empty? %><% @operateur_programmes.each do |el|%><%= el.programme.numero %> - <%end %><%else %>Aucun<%end %></b></p>
                <%end %>
              </div>
            </div>
          </div>
        </div>

        <div id="regime_budgetaire" class="fr-mb-4w">
          <h2 class="title-btn">Régime budgétaire et comptable <% if @est_valide && @admin %><%= link_to edit_organisme_path(@organisme, step: 2), class: "fr-btn fr-btn--secondary" do %>Modifier<%end %><%end %></h2>
          <% if @organisme.statut.to_i > 1 || @est_valide%>
            <div class="fr-card">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h3 class="fr-card__title">
                  GBCP I / III
                </h3>
                <p class="fr-card__desc">Partie I GBCP : <b><%= format_boolean(@organisme.gbcp_1) %></b></p>
                <p class="fr-card__desc">Présence d’un agent comptable : <b><%= format_boolean(@organisme.agent_comptable_present) %></b></p>
                <p class="fr-card__desc">Champ d'application du décret GBCP <button class="fr-btn--tooltip fr-btn" id="button-2995" aria-describedby="tooltip-2994" data-action="form#Dropdown">
                  Information contextuelle
                </button>
                  <span class="fr-tooltip fr-placement" id="tooltip-2994" role="tooltip" aria-hidden="true">Appartenance aux bulles de l’article 1er du GBCP à retrouver sur https://www.legifrance.gouv.fr/loda/id/JORFTEXT000026597003</span>: <b><%= format_boolean(@organisme.degre_gbcp) %></b></p>
                <p class="fr-card__desc">Partie III GBCP : <b><%= format_boolean(@organisme.gbcp_3) %></b></p>
                <p class="fr-card__desc">Comptabilité budgétaire : <b><%= format_boolean(@organisme.comptabilite_budgetaire) %></b></p>
              </div>
            </div>
          </div>
          <%else  %>
            <p class="fr-badge fr-badge--warning">Non complété</p>
          <%end %>
        </div>

        <div id="controle" class="fr-mb-4w">
          <h2 class="title-btn">Contrôle <% if @est_valide && @admin %><%= link_to edit_organisme_path(@organisme, step: 3), class: "fr-btn fr-btn--secondary" do %>Modifier<%end %><%end %></h2>
          <% if @organisme.statut.to_i > 2 || @est_valide%>
          <div class="fr-card">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h3 class="fr-card__title">
                  Présence contrôle : <%= format_boolean(@organisme.presence_controle) %>
                </h3>
                <p class="fr-card__desc">Contrôleur référent : <b><%= @organisme.controleur.nom %></b></p>
                <%  if @organisme.presence_controle %>
                  <p class="fr-card__desc">Nature contrôle : <b><%= format_boolean(@organisme.nature_controle) %></b></p>
                  <p class="fr-card__desc">Référence du texte de soumission au contrôle : <b><%= auto_link(simple_format(format_boolean(@organisme.texte_soumission_controle),{}, wrapper_tag: "span"), :html => { :target => '_blank' }) %></b></p>
                  <p class="fr-card__desc">Autorité de contrôle : <b><%= format_boolean(@organisme.autorite_controle) %></b></p>
                  <p class="fr-card__desc">Texte réglementaire de désignation de l'autorité de contrôle : <b><%= auto_link(simple_format(format_boolean(@organisme.texte_reglementaire_controle),{}, wrapper_tag: "span"), :html => { :target => '_blank' }) %></b></p>
                  <p class="fr-card__desc">Référence de l’arrêté de contrôle : <b><%= auto_link(simple_format(format_boolean(@organisme.arrete_controle),{}, wrapper_tag: "span"), :html => { :target => '_blank' }) %></b></p>
                  <p class="fr-card__desc">Document de contrôle : <b><%= format_boolean(@organisme.document_controle_present) %></b></p>
                  <%  if @organisme.document_controle_present %>
                    <p class="fr-card__desc">Date de signature du document : <b><%= format_boolean(format_date(@organisme.document_controle_date)) %></b></p>
                    <p class="fr-card__desc">Lien du document de contrôle : <b><%= auto_link(simple_format(format_boolean(@organisme.document_controle_lien),{}, wrapper_tag: "span"), :html => { :target => '_blank' }) %></b></p>
                  <%end %>
                <%end %>
                <p class="fr-card__desc">Référence de l’arrêté de nomination du commissaire du gouvernement : <b><%= auto_link(simple_format(format_boolean(@organisme.arrete_nomination),{}, wrapper_tag: "span"), :html => { :target => '_blank' }) %></b></p>

              </div>
            </div>
          </div>
          <%else  %>
            <p class="fr-badge fr-badge--warning">Non complété</p>
          <% end %>
        </div>

        <div id="tutelles" class="fr-mb-4w">
          <h2 class="title-btn">Tutelles financière et technique <% if @est_valide && @admin %><%= link_to edit_organisme_path(@organisme, step: 4), class: "fr-btn fr-btn--secondary" do %>Modifier<%end %><%end %></h2>
          <% if @organisme.statut.to_i > 3 || @est_valide%>
          <div class="fr-card">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h3 class="fr-card__title">
                  Tutelle financière MCP <button class="fr-btn--tooltip fr-btn" id="button-2" aria-describedby="tooltip-2" data-action="form#Dropdown">
                  Information contextuelle
                </button>
                  <span class="fr-tooltip fr-placement" id="tooltip-2" role="tooltip" aria-hidden="true">La tutelle financière MCP découle de l'article 174 du décret GBCP. Les GIP n'ont pas de tutelle.</span>: <%= format_boolean(@organisme.tutelle_financiere) %>
                </h3>
                <% if @organisme.tutelle_financiere %>
                  <p class="fr-card__desc">Délégation de l'approbation des BI / BR / comptes financiers : <b><%= format_boolean(@organisme.delegation_approbation) %></b></p>
                <%end %>
                <p class="fr-card__desc">Autorité chargée de l’approbation : <b><%= format_boolean(@organisme.autorite_approbation) %></b></p>
                <p class="fr-card__desc">Ministère de tutelle principale : <b><% if @organisme.ministere %><%= @organisme.ministere.nom %><%else %>Aucun<%end %></b></p>
                <p class="fr-card__desc">Ministère•s de co-tutelle : <b><% if @organisme_ministeres && !@organisme_ministeres.empty? %><% @organisme_ministeres.each do |orga|%><%= orga.ministere.nom %> - <%end %><%else %>Aucun<%end %></b></p>
               </div>
            </div>
          </div>
          <%else  %>
            <p class="fr-badge fr-badge--warning">Non complété</p>
          <%end %>
        </div>

        <div id="gouvernance" class="fr-mb-4w">
          <h2 class="title-btn">Gouvernance DB <% if @est_valide && @admin %><%= link_to edit_organisme_path(@organisme, step: 5), class: "fr-btn fr-btn--secondary" do %>Modifier<%end %><%end %></h2>
          <% if @organisme.statut.to_i > 4 || @est_valide%>
          <div class="fr-card">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h3 class="fr-card__title">
                  Administrateur DB au sein de l'organe de gouvernance <button class="fr-btn--tooltip fr-btn" id="button-3" aria-describedby="tooltip-3" data-action="form#Dropdown">
                  Information contextuelle
                </button>
                  <span class="fr-tooltip fr-placement" id="tooltip-3" role="tooltip" aria-hidden="true">La composition de l'instance de gouvernance est fixée par le texte statutaire de l'organisme. La représentation de la DB peut-être assurée par un contrôleur.</span>
                  : <%= format_boolean(@organisme.admin_db_present) %>
                </h3>
                <% if @organisme.admin_db_present %>
                  <p class="fr-card__desc">Fonction administrateur DB : <b><%= format_boolean(@organisme.admin_db_fonction) %></b></p>
                <% end %>
                <p class="fr-card__desc">Présence DB au pré-CA <button class="fr-btn--tooltip fr-btn" id="button-4" aria-describedby="tooltip-4" data-action="form#Dropdown">
                  Information contextuelle
                </button>
                  <span class="fr-tooltip fr-placement" id="tooltip-4" role="tooltip" aria-hidden="true">Au pré-CA ou à tout autre organe délibérant (Assemblée Générale)</span>
                  : <b><%= format_boolean(@organisme.admin_preca) %></b></p>
                <p class="fr-card__desc">Présence contrôleur au pré-CA <button class="fr-btn--tooltip fr-btn" id="button-5" aria-describedby="tooltip-5" data-action="form#Dropdown">
                  Information contextuelle
                </button>
                  <span class="fr-tooltip fr-placement" id="tooltip-5" role="tooltip" aria-hidden="true">Au pré-CA ou à tout autre organe délibérant (Assemblée Générale)</span> : <b><%= format_boolean(@organisme.controleur_preca) %></b></p>
                <p class="fr-card__desc">Présence contrôleur au CA <button class="fr-btn--tooltip fr-btn" id="button-6" aria-describedby="tooltip-6" data-action="form#Dropdown">
                  Information contextuelle
                </button>
                  <span class="fr-tooltip fr-placement" id="tooltip-6" role="tooltip" aria-hidden="true">Au CA ou à tout autre organe délibérant (Assemblée Générale)</span>: <b><%= format_boolean(@organisme.controleur_ca) %></b></p>
                <p class="fr-card__desc">Comité d’audit et des risques : <b><%= format_boolean(@organisme.comite_audit) %></b></p>
              </div>
            </div>
          </div>
          <%else  %>
            <p class="fr-badge fr-badge--warning">Non complété</p>
          <%end %>
        </div>

        <div id="categories" class="fr-mb-4w">
          <h2 class="title-btn">Catégories <% if @est_valide && @statut_user == "2B2O" %><%= link_to edit_organisme_path(@organisme, step: 6), class: "fr-btn fr-btn--secondary" do %>Modifier<%end %><%end %></h2>
          <% if @est_valide %>
          <div class="fr-card">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h3 class="fr-card__title">
                  APU : <b><%= format_boolean(@organisme.apu) %></b>
                </h3>
                <p class="fr-card__desc">ODAC Liste INSEE année <%= Date.today.year-2 %> : <b><%= format_boolean(@organisme.odac_n) %></b></p>
                <p class="fr-card__desc">ODAC Liste INSEE année <%= Date.today.year-3 %> : <b><%= format_boolean(@organisme.odac_n1) %></b></p>
                <p class="fr-card__desc">Arrêté interdiction ODAC emprunt ≥ 12 mois : <b><%= format_boolean(@organisme.arrete_interdiction_odac) %></b></p>
                <p class="fr-card__desc">ODAL Liste INSEE année <%= Date.today.year-2 %> : <b><%= format_boolean(@organisme.odal_n) %></b></p>
                <p class="fr-card__desc">ODAL Liste INSEE année <%= Date.today.year-3 %> : <b><%= format_boolean(@organisme.odal_n1) %></b></p>
                <p class="fr-card__desc">Soumission à la CIASSP année <%= Date.today.year %> : <b><%= format_boolean(@organisme.ciassp_n) %></b></p>
                <p class="fr-card__desc">Soumission à la CIASSP année <%= Date.today.year - 1 %> : <b><%= format_boolean(@organisme.ciassp_n1) %></b></p>
              </div>
            </div>
          </div>
          <%else  %>
            <p class="fr-badge fr-badge--warning">Non complété</p>
          <%end %>
        </div>

        <div id="modifications" class="fr-mb-4w">
          <h2>Historique des modifications [<%= @modifications_valides_organisme.length + @modifications_rejetees_organisme.length %>]</h2>
          <div class="fr-tabs fr-mb-2w">
            <ul class="fr-tabs__list" role="tablist" aria-label="Onglets Organismes actifs">
              <li role="presentation">
