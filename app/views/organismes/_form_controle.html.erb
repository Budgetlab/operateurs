<% if @organisme.statut != "valide" %>
  <h1 class="fr-my-6w">Création d'un organisme</h1>
  <div class="fr-stepper">
    <h2 class="fr-stepper__title">
      <span class="fr-stepper__state">Étape 3 sur 6</span>
      Contrôle
    </h2>
    <div class="fr-stepper__steps" data-fr-current-step="3" data-fr-steps="6"></div>
    <p class="fr-stepper__details">
      <span class="fr-text--bold">Étape suivante :</span> Tutelles financière et technique
    </p>
  </div>
<%else %>
  <h1 class="fr-my-6w">Modification</h1>
<%end %>
<div class="fr-mt-4w" data-controller="form">
  <%= form_with(model: @organisme, data: {'form-target': "form", action: "change->form#validateForm input->form#validateForm turbo:before-fetch-request->form#submitForm"}) do |f|%>
    <% if @organisme.statut != "valide" %>
      <%= f.hidden_field :statut, value: "3" %>
    <%end %>
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-lg-4">
          <fieldset class="fr-fieldset">
            <legend class="fr-fieldset__legend--regular fr-fieldset__legend fr-mb-1w">
              Présence d'un contrôle*
            </legend>
            <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
              <div class="fr-radio-group">
                <%= f.radio_button :presence_controle, true, id: "radio-controle-1", checked: @organisme.presence_controle, data: {'form-target': 'checkRequire', action: "change->form#ChangeControle" }  %>
                <label class="fr-label" for="radio-controle-1">Oui</label>
              </div>
            </div>
            <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
              <div class="fr-radio-group">
                <%= f.radio_button :presence_controle, false, checked: @organisme.presence_controle == false, id:"radio-controle", data: {'form-target': 'checkRequire', action: "change->form#ChangeControle" } %>
                <label class="fr-label" for="radio-controle">Non</label>
              </div>
            </div>
          </fieldset>
        </div>
        <div class="fr-col-12 fr-col-lg-4">
          <div class="fr-select-group">
            <label for="controleur" class="fr-label">Contrôleur référent*</label>
            <%= f.select :controleur_id,options_for_select([["- sélectionner -", ""], *@controleurs.map { |controleur| [controleur.nom, controleur.id] }], selected: @organisme.controleur_id),{}, {data: {'form-target': 'fieldRequire'}, id:"controleur",class:"fr-select"}%>
          </div>
        </div>
      </div>
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-lg-4">
          <div class="fr-select-group fr-select-group--disabled">
            <label for="nature" class="fr-label">Nature du contrôle*</label>
            <%= f.select :nature_controle,[["- sélectionner -",""],['3°','3°']],{selected: @organisme.nature_controle}, {data: {'form-target': 'fieldRequire'}, id:"nature",class:"fr-select", disabled: true}%>
          </div>
        </div>
        <div class="fr-col-12 fr-col-lg-6">
          <div class="fr-input-group fr-input-group--disabled">
            <label for="texte_soumission_controle" class="fr-label">Référence du texte de soumission au contrôle</label>
            <%= f.text_field :texte_soumission_controle, value: @organisme.texte_soumission_controle, id:"texte_soumission_controle", class:"fr-input", disabled: true%>
          </div>
        </div>
      </div>
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-lg-4">
          <div class="fr-select-group fr-select-group--disabled">
            <label for="autorite_controle" class="fr-label">Autorité de contrôle*</label>
            <%= f.select :autorite_controle,[["- sélectionner -",""],['3°','3°']],{selected: @organisme.autorite_controle}, {data: {'form-target': 'fieldRequire'}, id:"autorite_controle",class:"fr-select", disabled: true}%>
          </div>
        </div>
        <div class="fr-col-12 fr-col-lg-6">
          <div class="fr-input-group fr-input-group--disabled">
            <label for="texte_reglementaire_controle" class="fr-label">Texte réglementaire de désignation de l'autorité de contrôle</label>
            <%= f.text_field :texte_reglementaire_controle, value: @organisme.texte_reglementaire_controle, id:"texte_reglementaire_controle", class:"fr-input", disabled: true%>
          </div>
        </div>
      </div>
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-lg-10">
          <div class="fr-input-group fr-input-group--disabled">
            <label for="arrete_controle" class="fr-label">Référence de l’arrêté de contrôle</label>
            <%= f.text_field :arrete_controle, value: @organisme.arrete_controle, id:"arrete_controle", class:"fr-input", disabled: true%>
          </div>
        </div>
      </div>
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-lg-4">
          <fieldset class="fr-fieldset" disabled>
            <legend class="fr-fieldset__legend--regular fr-fieldset__legend fr-mb-1w" id='radio-inline-legend'>
              Document de contrôle
            </legend>

            <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
              <div class="fr-radio-group">
                <%= f.radio_button :document_controle_present, true, id: "radio-document-1", checked: @organisme.document_controle_present == true, data: {action: "change->form#ChangePresenceDocument" } %>
                <label class="fr-label" for="radio-document-1">Oui</label>
              </div>
            </div>
            <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
              <div class="fr-radio-group">
                <%= f.radio_button :document_controle_present, false, checked: @organisme.document_controle_present == false, id:"radio-document-b", data: {action: "change->form#ChangePresenceDocument" }  %>
                <label class="fr-label" for="radio-document-b">Non</label>
              </div>
            </div>
            <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
              <div class="fr-radio-group">
                <%= f.radio_button :document_controle_present, nil, checked: @organisme.document_controle_present.nil? , id:"radio-document", data: {action: "change->form#ChangePresenceDocument" }  %>
                <label class="fr-label" for="radio-document">Non renseigné</label>
              </div>
            </div>
          </fieldset>
        </div>
        <div class="fr-col-12 fr-col-lg-4">
          <div class="fr-input-group fr-input-group--disabled">
            <label for="date_signature" class="fr-label">Date de signature du document</label>
            <%= f.text_field :document_controle_date, class:"fr-select", data: { controller: "flatpickr",flatpickr_date_format: "d/m/Y",flatpickr_min_date: Date.new(2023,1,1), flatpickr_max_date: Date.new(2023,12,31), flatpickr_default_date: format_date(@organisme.document_controle_date)}, value: @organisme.document_controle_date, id: "date_signature", placeholder: "- sélectionner -", disabled: true%>
          </div>
        </div>
        <div class="fr-col-12 fr-col-lg-4">
          <div class="fr-input-group fr-input-group--disabled">
            <label for="document_controle_lien" class="fr-label">Lien du document de contrôle</label>
            <%= f.text_field :document_controle_lien, value: @organisme.document_controle_lien, id:"document_controle_lien", class:"fr-input", disabled: true%>
          </div>
        </div>
      </div>
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-lg-10">
          <div class="fr-input-group fr-input-group--disabled">
            <label for="arrete_nomination" class="fr-label">Référence de l’arrêté de nomination du commissaire du gouvernement</label>
            <%= f.text_field :arrete_nomination, value: @organisme.arrete_nomination, id:"arrete_nomination", class:"fr-input", disabled: true%>
          </div>
        </div>
      </div>

      <div class="fr-my-4w">
        <%= f.submit "Valider et passer à l'étape suivante", class: "fr-btn", data: {'form-target': "submitBouton"}, aria: { label: "Valider"},id:'submitBouton', disabled: true %>
      </div>
    <%end %>
</div>