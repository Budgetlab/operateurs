<% if @organisme.statut != "valide" %>
  <h1 class="fr-my-6w">Création d'un organisme</h1>
  <div class="fr-stepper">
    <h2 class="fr-stepper__title">
      <span class="fr-stepper__state">Étape 6 sur 6</span>
      Catégories
    </h2>
    <div class="fr-stepper__steps" data-fr-current-step="6" data-fr-steps="6"></div>
  </div>
<%else %>
  <h1 class="fr-my-6w">Modification</h1>
<%end %>
<div class="fr-mt-4w" data-controller="form">
  <%= form_with(model: @organisme, data: {'form-target': "form"}) do |f|%>
    <% if @organisme.statut != "valide" %>
      <%= f.hidden_field :statut, value: "valide" %>
    <%end %>
    <div class="fr-grid-row fr-grid-row--gutters">
      <div class="fr-col-12 fr-col-lg-4">
        <fieldset class="fr-fieldset">
          <legend class="fr-fieldset__legend--regular fr-fieldset__legend fr-mb-1w" id='radio-inline-legend'>
            APU
          </legend>

          <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
            <div class="fr-radio-group">
              <%= f.radio_button :apu, true, id: "radio-apu-n-1", checked: @organisme.apu == true%>
              <label class="fr-label" for="radio-apu-n-1">Oui</label>
            </div>
          </div>
          <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
            <div class="fr-radio-group">
              <%= f.radio_button :apu, false, checked: @organisme.apu == false, id:"radio-apu-n-b" %>
              <label class="fr-label" for="radio-apu-n-b">Non</label>
            </div>
          </div>
          <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
            <div class="fr-radio-group">
              <%= f.radio_button :apu, nil, checked: @organisme.apu.nil? , id:"radio-apu-n" %>
              <label class="fr-label" for="radio-apu-n">Non renseigné</label>
            </div>
          </div>
        </fieldset>
      </div>
      <div class="fr-col-12 fr-col-lg-4">
        <fieldset class="fr-fieldset">
          <legend class="fr-fieldset__legend--regular fr-fieldset__legend fr-mb-1w" id='radio-inline-legend'>
            Soumission à la CIASSP année [N]<span class="fr-hint-text">Il est indispensable de renseigner cette donnée sur la base de l'annexe à la note annuelle de cadrage préparée par 2BPSS.</span>
          </legend>

          <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
            <div class="fr-radio-group">
              <%= f.radio_button :ciassp_n, true, id: "radio-ciassp-n-1", checked: @organisme.ciassp_n == true%>
              <label class="fr-label" for="radio-ciassp-n-1">Oui</label>
            </div>
          </div>
          <div class="fr-fieldset__element fr-fieldset__element--inline fr-mb-0">
