<main role="main" class="containtAll">
  <div class="fr-container ">
    <div class="fr-col-lg-12">
      <h1 class="fr-my-7w">Ajouter un nouveau document</h1>
      <div>
        <%= form_tag import_organismes_path, multipart: true do %>
          <div class="fr-upload-group">
            <label class="fr-label" for="file-upload">Ajouter des fichiers
              <span class="fr-hint-text">Taille maximale : 50 Mo. Formats supportés : xlsx. </span>
            </label>
            <%= file_field_tag  :file, accept: '.xlsx', class: "fr-upload", id: "file-upload" %>
          </div>
          <div class="fr-my-4w"><%= submit_tag "Transmettre", class:"fr-btn" %></div>
        <% end %>
      </div>
      <div class="fr-mb-4w"><%= link_to reset_all_path, class:"fr-btn fr-btn--secondary", data: {"turbo-method": :post} do %>Tout supprimer<%end %></div>
      <div class="fr-download">
        <p><%= link_to "/opera/organismes_ajout.xlsx", format: :xslx, class: "fr-link fr-download__link" do %>Télécharger la liste des <%= @organismes.count %> organismes<span class="fr-download__detail">Format .xlsx - 500Ko</span><%end %></p>
      </div>
    </div>
  </div>
</main>