<% if flash.any? %>
  <% flash.each do |type, msg| %>
    <% if msg == "control_document_success" %>
      <div class="fr-alert fr-alert--success fr-alert--sm">
        <p>Le document a été importé avec succès.</p>
        <button class="fr-link--close fr-link" title="Masquer le message" onclick="const alert = this.parentNode; alert.parentNode.removeChild(alert)">Masquer le message</button>
      </div>
    <% elsif msg = "control_document_failed" %>
      <div class="fr-alert fr-alert--error fr-alert--sm">
        <p>L'import du document a échoué.</p>
        <button class="fr-link--close fr-link" title="Masquer le message" onclick="const alert = this.parentNode; alert.parentNode.removeChild(alert)">Masquer le message</button>
      </div>
    <% end %>
  <% end %>
<% end %>